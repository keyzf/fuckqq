extends layout

block body
	form#reg_form.form-horizontal(accept='/reg' method='post')
		.form-group.form-group-lg
			label.col-md-4.control-label(for='name') Username
			.col-md-6
				input#name.form-control(name='name' size='30' type='text' placeholder='Please type username')
		.form-group.form-group-lg
			label.col-md-4.control-label(for='pass') Password
			.col-md-6
				input#pass.form-control(name='pass' size='30' type='password')
		.form-group.form-group-lg
			label.col-md-4.control-label(for='re_pass') Re-Password
			.col-md-6
				input#re_pass.form-control(name='re_pass' size='30' type='password')
		.form-group.form-group-lg
			label.col-md-4.control-label(for='email') E-mail
			.col-md-6
				input#email.form-control(name='email' size='30' type='email')
		.form-group
			.col-md-6.col-md-offset-4
				input.btn.btn-default(type='submit' value='Signup')
